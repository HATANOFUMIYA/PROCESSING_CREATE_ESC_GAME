  //カギの画像
  PImage Tans_Key ;
  //カギを取った後
  PImage Tans_No_Key;
  //パイルドライバー画像
  PImage pile;

  //部屋の置物等、画像変数
  //壁掛けの絵
  PImage illustration;
  //ネコの置物
  PImage cat;

  //メッセージウィンドウ画像
  PImage MS;

  //タイトル画面カーソル画像
  PImage img; 
  
  //持ち物画面の画像集
  PImage Tkey;
  PImage Rimokonn;
  PImage Dennti;
  PImage Driver;
  PImage DoorKey;
  
  //謎解き№画像集ロード
  void Loadimage() {
    no0 = loadImage("number_0.png");
    no1 = loadImage("number_1.png");
    no2 = loadImage("number_2.png");
    no3 = loadImage("number_3.png");
    no4 = loadImage("number_4.png");
    no5 = loadImage("number_5.png");
    no6 = loadImage("number_6.png");
    no7 = loadImage("number_7.png");
    no8 = loadImage("number_8.png");
    no9 = loadImage("number_9.png");
    reset = loadImage("reset.png");
    back = loadImage("back.png");

    Tans_Key = loadImage("gold-key-md.png");
    Tans_No_Key = loadImage("NoKey.png");

    pile = loadImage("piledriver.png");

    img = loadImage("finger.png");
    cat = loadImage("ネコの置物.png");


    illustration = loadImage("額縁.png");
    MS = loadImage("メッセージフレーム.png");
    
    Tkey = loadImage("カギ(持ち物).png");
    
    Rimokonn = loadImage("リモコン(持ち物).png");
    
    Dennti = loadImage("電池(持ち物).png");
    
