class Image {
  //各シーン画像集
  PImage heya;
  PImage heya1;
  PImage heya2;
  PImage heya3;

  //各シーン画像集ロード
  void Roomimage() {
    heya  = loadImage("clock_0800.png");
    heya1 = loadImage("room2.png");
    heya2 = loadImage("room3.png");
    heya3 = loadImage("room4.png");
  }

  //各部屋移動のフィールド
  PImage heya_1;
  PImage heya_2;
  PImage heya_3;
  PImage heya_4;
  PImage motimono;
  PImage setumei;



  //各部屋移動のロード
  void Roomimage_Map() {
    heya_1 = loadImage("見取り図1.png");
    heya_2 = loadImage("見取り図2.png");
    heya_3 = loadImage("見取り図3.png");
    heya_4 = loadImage("見取り図4.png");
    motimono = loadImage("持ち物画面.png"); 
    setumei = loadImage("説明画面.png");
  }
  //謎解き№画像集フィールド
  PImage no0;
  PImage no1;
  PImage no2;
  PImage no3;
  PImage no4;
  PImage no5;
  PImage no6;
  PImage no7;
  PImage no8;
  PImage no9;

